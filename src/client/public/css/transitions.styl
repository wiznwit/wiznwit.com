.anim
  animation-duration .7s
  animation-iteration-count 1
  animation-timing-function ease-out
  animation-fill-mode forwards

@keyframes spin
  100%
    transform rotate(360deg)

@keyframes fade-in
  from
    opacity 0
  to
    opacity 1

@keyframes fade-out
  from
    opacity 1
  to
    opacity 0
